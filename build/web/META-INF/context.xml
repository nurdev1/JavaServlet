        <url-pattern>/Monservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>monServlet2</servlet-name>
        <url-pattern>/monServlet2</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
